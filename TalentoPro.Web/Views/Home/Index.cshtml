@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <div class="jumbotron bg-light p-5 rounded mb-4">
        <h1 class="display-4">TalentoPro</h1>
        <p class="lead">Sistema de Gestión de Recursos Humanos</p>
        <hr class="my-4">
        <p>Gestione empleados, departamentos y capacitaciones de forma eficiente.</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="bi bi-people-fill"></i> Empleados</h5>
                </div>
                <div class="card-body">
                    <h3 class="card-title text-center">@ViewBag.CantidadEmpleados</h3>
                    <p class="card-text">Empleados registrados en el sistema.</p>
                    <a asp-controller="Empleado" asp-action="Index" class="btn btn-primary w-100">
                        <i class="bi bi-list"></i> Ver Empleados
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-building"></i> Departamentos</h5>
                </div>
                <div class="card-body">
                    <h3 class="card-title text-center">@ViewBag.CantidadDepartamentos</h3>
                    <p class="card-text">Departamentos activos en la empresa.</p>
                    <a asp-controller="Departamento" asp-action="Index" class="btn btn-success w-100">
                        <i class="bi bi-list"></i> Ver Departamentos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-gear-fill"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Empleado" asp-action="Create" class="btn btn-outline-primary w-100">
                                <i class="bi bi-person-plus-fill"></i> Registrar Nuevo Empleado
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="#" class="btn btn-outline-success w-100">
                                <i class="bi bi-calendar-check"></i> Registrar Capacitación
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="#" class="btn btn-outline-info w-100">
                                <i class="bi bi-file-earmark-text"></i> Generar Reporte
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
